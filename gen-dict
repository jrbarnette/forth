#!/bin/bash

usage() {
    echo "usage: $(basename $0) target-type" >&2
    exit 1
}

cd $(dirname $0)

if [ $# -ne 1 ]
then
    usage
fi

FILEORDER="host/$1/file-order"
if [ ! -f $FILEORDER ]
then
    echo "$FILEORDER: no file" >&2
    usage
fi

FILES=( $(sed 's/#.*//' $FILEORDER) )
cat "${FILES[@]}" | bootstrap/forth
